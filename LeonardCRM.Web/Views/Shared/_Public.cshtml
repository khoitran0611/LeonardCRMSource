<!DOCTYPE html>
<html lang="en" ng-app="LeonardCRMFrontEnd" ng-controller="AppController">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title ng-bind="windowTitle">@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/css")
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto" />*@
    <link href="https://fonts.googleapis.com/css?family=Herr+Von+Muellerhoff" rel="stylesheet">
    <link rel="stylesheet" href="/Content/ng-table.min.css" />


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")


    @*Angular Module Lib*@
    <script type="text/javascript" src="/Scripts/vendor/angular/angular.min.js"></script>
    <script type="text/javascript" src="/Scripts/vendor/angular/angular-route.min.js"></script>
    <script type="text/javascript" src="/Scripts/vendor/angular/angular-animate.min.js"></script>
    <script type="text/javascript" src="/Scripts/vendor/angular/angular-cookies.min.js"></script>
    <script type="text/javascript" src="/Scripts/shared.js"></script>
    <script type="text/javascript" src="/Scripts/tinymce/tinymce.min.js"></script>
    <script type="text/javascript" src="/Scripts/vendor/others/angular-file-upload.js"></script>
    <script type="text/javascript" src="/Scripts/vendor/ngTable/ng-table.min.js"></script>

    @Scripts.Render("~/ScriptPlugin")
    <script src="@Url.Content("~/Scripts/vendor/form-validator/jquery.form-validator.min.js")"></script>
    @Scripts.Render("~/fe")

</head>
<body class="hold-transition skin-black ng-cloak">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="https://www.leonardusa.com" target="_blank" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>LT</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">
                    <img src="/Content/images/logo.png" /></span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                @*@{Html.RenderAction("PublicLoginInfo", "Public");}*@
                <div class="pull-right visible-lg-inline-block visible-md-inline-block visible-sm-inline-block">
                    <label style="height: 48px; line-height: 48px; color: #DD4B39 !important; display: inline-block; margin:0;" ng-show="showBackAdminBtn">{{languages.COMMON.ASSISTANT_MODE}}</label>
                    <a ng-href="/admin/#/order/view/{{defaultOrdersView}}" class="btn submit-app-action" ng-show="showBackAdminBtn" style="margin: 6px 15px; color: #523842;">{{languages.COMMON.BACK_TO_DASHBOARD_BTN}}</a>
                </div>

                <div class="pull-right text-right visible-xs-inline-block">
                    <a ng-href="/admin/#/order/view/{{defaultOrdersView}}" class="btn submit-app-action" ng-show="showBackAdminBtn" style="margin: 10px 15px; color: #523842;"><i class="glyphicon glyphicon-arrow-right"></i></a>
                    <label style="color: #DD4B39 !important; display: block; padding-right: 15px;" ng-show="showBackAdminBtn" class="ng-binding">{{languages.COMMON.ASSISTANT_MODE}}</label>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        @{ Html.RenderAction("LeftMenu", "Public"); }
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header" ng-if="pageHeader">
                <h1>
                    <span ng-bind-html="pageHeader"></span>
                    <small>{{pageHeaderDescription}}</small>
                </h1>               
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Your Page Content Here -->
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        @Html.Partial("~/Views/Public/Controls/_Footer.cshtml")
    </div>
    <!-- ./wrapper -->
    @RenderSection("styles", false)
    @RenderSection("Scripts", false)
</body>
</html>
