@{
    Layout = "~/Views/Shared/_AuthenLayout.cshtml";
}

@section styles
{
    <style type="text/css">
        html, body {
            overflow: hidden;
        }

        .eliapp {
            height: 100%;
            background-color: #cdcdcd;
        }

        .loading1 {
            position: absolute;
            -moz-min-width: 200px;
            -ms-min-width: 200px;
            -o-min-width: 200px;
            -webkit-min-width: 200px;
            min-width: 300px;
            top: 43%;
        }
    </style>
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/vendor/jquery/alertify.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/angular/angular.min.js"></script>
    <script type="text/javascript">
        var webapp = angular.module('LeonardCRM', []);
        localStorage.removeItem('resourceStrings');
        localStorage.removeItem('modules');
    </script>
    <script type="text/javascript" src="~/Scripts/app/appConfig.js"></script>        
    <script type="text/javascript" src="~/Scripts/shared.js"></script>
    <script type="text/javascript" src="~/Scripts/app/services/resource-service.js"></script>
    <script type="text/javascript" src="~/Scripts/app/services/service-helper.js"></script>
    <script type="text/javascript" src="~/Scripts/app/services/view-service.js"></script>
    <script src="~/Scripts/app/controllers/resource/loadResourceCtrl.js"></script>
}

<div class="login-box">
    <div ng-app="LeonardCRM" ng-controller="LoadResourceCtrl" class="eliapp">
        <div class="loading1">
            <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    Loading resources...
                </div>
            </div>
        </div>
    </div>
</div>
